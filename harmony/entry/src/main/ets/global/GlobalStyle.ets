/* 全局样式 */
.container {
  width: 100%;
  height: 100%;
  flex-direction: column;
  background-color: #F5F5F5;
}

.page-title {
  font-size: 20fp;
  font-weight: 600;
  color: #333;
}

.btn-primary {
  background-color: #2196F3;
  color: #FFF;
  border-radius: 8;
  font-size: 16fp;
  padding: 12;
}

.btn-secondary {
  background-color: #E0E0E0;
  color: #333;
  border-radius: 8;
  font-size: 16fp;
  padding: 12;
}

.card {
  background-color: #FFF;
  border-radius: 12;
  padding: 16;
  margin: 8;
}

.input-field {
  background-color: #FFF;
  border: 1px solid #DDD;
  border-radius: 8;
  padding: 12;
  font-size: 16fp;
}

.icon-button {
  width: 48;
  height: 48;
  border-radius: 24;
  background-color: #F5F5F5;
  justify-content: center;
  align-items: center;
}
